@model List<Data.Entities.Advert>; 

<div class="container text-center">
    <div class="row row-cols-1 row-cols-md-3 g-4">
         @foreach( var a in Model)
         {      
        <div class="col">
            <div class="card h-100 advertCard">                
                <img src = "@a.Foto" class="card-img-topl" alt="foto not load">
                <div class="card-body">
                    <h5> @a.Name</h5>
                    <p> @a.Description</p>
                    <h5>Price: @a.Price$</h5>
                    <div class="btn-primary"> Phone: @a.ContactInformation</div>
                </div>
                <a asp-controller="Like" asp-action="Add" asp-route-id="@a.Id" class="btn btn-outline-success">
                        <i class="bi bi-heart"></i>
                        Add to favorite
                    </a>
            </div>
        </div>
        }
        
    </div>
</div>