@model List<Data.Entities.Advert>

<div class="card text-center">
    <div class="card-header">
        My favorit
    </div>
    <div class="card-body">
        <h5 class="card-title">Advert List</h5>
        @if(!Model.Any())
        {
            <p class="card-text">Looks like your cart is empty!</p>
        }
        else
        {
            <ol class="list-group list-group-numbered">
                @foreach (var a in Model)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-start">
                        <div class="ms-2 me-auto">
                            <span class="fw-bold">@a.Name</span>              
                        </div>
                        <div>
                            <span class="badge bg-dark">@a.Price$</span>
                            <a asp-action="Remove" asp-route-id="@a.Id" class="text-danger">
                                <i class="bi bi-x-octagon"></i>
                            </a>
                        </div>
                    </li>
                }
            </ol>
           @* <a href="#" class="btn btn-success mt-3">Confirm</a>*@
        }
        <div>
            <a asp-controller="Home" class="btn btn-primary mt-3">Continue see advert</a>
        </div>

    </div>
    <div class="card-footer text-muted d-flex justify-content-between">
        <div>Count: <span class="badge bg-secondary">@Model.Count</span></div>
        <div>Total: <span class="badge bg-secondary">@Model.Sum(x => x.Price)$</span></div>
    </div>
</div>
